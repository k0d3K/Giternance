{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "lint:ts": "eslint . --ext .ts --max-warnings=0",
    "format:check": "npm run lint:ts && madge --circular --extensions ts ./frontend/src",
    "build:css": "npx @tailwindcss/cli -o ./dist/assets/style.css --minify",
    "build:ts_server": "tsc -p ./frontend/tsconfig.build.json",
    "build:ts_client": "tsc -p ./frontend/tsconfig.json --noEmit && npx esbuild ./frontend/src/main.ts --bundle --minify --sourcemap --outfile=dist/public/bundle.js --platform=browser --target=es2022",
    "build": "npm run build:css && npm run build:ts_server && npm run build:ts_client",
    "start": "node ./dist/index.js"
  },
  "dependencies": {
    "fastify": "5.6.1",
    "@fastify/static": "8.2.0",
    "@types/node": "24.7.0",
    "tailwindcss": "4.1.14"
  },
  "devDependencies": {
    "esbuild": "0.26.0",
    "typescript": "5.9.3",
    "eslint": "9.37.0",
    "@typescript-eslint/parser": "8.46.0",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@stylistic/eslint-plugin": "5.4.0",
    "eslint-plugin-import": "2.32.0",
    "madge": "8.0.0",
    "@tailwindcss/cli": "4.1.14"
  }
}
